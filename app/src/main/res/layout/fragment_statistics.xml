<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.StatisticsFragment"
    android:padding="@dimen/padding_large">

    <ImageView
        android:id="@+id/ivCoverArt"
        android:layout_width="@dimen/big_cover_width"
        android:layout_height="@dimen/default_height"
        android:layout_margin="@dimen/default_margin"
        app:layout_constraintDimensionRatio="@string/square_ratio"
        android:contentDescription="@string/cover_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:id="@+id/tvNumPlays"
        android:layout_width="@dimen/big_cover_width"
        android:layout_height="wrap_content"
        android:textSize="@dimen/artist_text"
        app:layout_constraintTop_toBottomOf="@+id/ivCoverArt"
        app:layout_constraintLeft_toLeftOf="@id/ivCoverArt"
        app:layout_constraintRight_toRightOf="@id/ivCoverArt"/>

</androidx.constraintlayout.widget.ConstraintLayout>